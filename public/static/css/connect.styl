.mtop16
	margin-top 16px
	
.box
	//margin 8em
	background-color #fff
	border-radius 8px
	//border 1px solid #d6d6d6
	position relative  
	width 500px 
	.btn-success
		color #fff//#545454
		font-weight bold
		background-color #21856d//#00ad27a6//green
		border 0px
		width 100%
		&:hover
			background-color black
			color white
	.form-control
		&:focus
		&:active
			outline none
			box-shadow none
	.inside
		padding 16px 
	.header
		background-color #21856d // #00ad27a6//green
		border-bottom 2px solid #00ad27a6
		border-radius 8px 8px 0px 0px
		padding 16px 
		a 
			img 
				display block
				margin 0px auto
				width 15%
	.footer
		text-align center
		a
			display inline-block 
			font-size .8em
			
					
@media only screen and (max-width 728px)
	.box
		width 88%
	
