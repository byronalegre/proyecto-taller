body
	background-color rgba(0, 0, 0,0.17) //#21856d2e//blanco con tonalidad gris #e8e8e8
	font-size 14px
	font-family: 'Roboto', sans-serif;		

h2,h3,h4,h5,ul,body,html
	padding 0px
	margin 0px
a
	text-decoration none	
	&:hover
		text-decoration none	

.mtop16
	margin-top 16px	

.wrapper
	min-height 100vh
	overflow hidden
	.col1
		float left
		position relative
		z-index 999
		widht 20%
	.col2
		float left
		width 80%
		
.sidebar
	background-color #212121//#343a40//#fff
	min-height 120vh //Altura del sidebar
	.section-top
		background-color #fff//verde-> #00ad27a6
		border-bottom 2px solid #00ad27a6
		//box-shadow 0 0.5rem 1rem rgba(0,0,0,0.15)
	.logo
		display block
		text-align center
		margin 0px auto
		padding-top 24px
		width 90%
	.icon
		a //ESTO POSICIONA EL ICONO SALIR
			margin-right 0.5em	
			float right 
			color #21856d//verde #005403//#b35100
			font-size 1.5em
			&:hover
				color red
	.user
		color #21856d//verde #005403 !important
		padding 25px
		
	.main
		ul
			li
				margin-bottom 4px
				a
					color #fff//#000 !important//8998ac gris clarito
					display block
					font-size 1.1em
					padding 12px 12px
					i
						margin-right 10px
					&:hover
						background-color #21856d//verde #005403
						box-shadow 0 0.5rem 1rem rgba(0,0,0,0.15)
						color #fff !important
						text-decoration none
				a.active
						background-color #21856d//verde #005403
						box-shadow 0 0.5rem 1rem rgba(0,0,0,0.15)
						color #fff !important
						text-decoration none

.navbar
	border-radius 0 0 5px 0
	padding-left 1rem
	font-weight bold
	background-color #212121//#343a40//#fff //#fd7e1494
	//border-bottom 2px solid #e8e8e8
	a
		color #fff//#005403/*#b35100*/ !important
		&:hover
			color #21856d	
.page
	padding-top 16px
	padding-bottom 16px
	.breadcrumb
		background-color #fff
	 	box-shadow 0 0.5rem 1rem rgba(0,0,0,0.10) !important
		.breadcrumb-item
			a
				&:hover
					text-decoration none !important
					
	.panel
		background-color #fff
		border-radius 6px
		border-bottom 2px solid #00ad27a6//#fd7e1494
		width 100%
		.header
			background-color #21856d//#00ad27a6//#fd7e1494
			border-bottom 1px solid #e8e8e8
			h2.title
				font-weight bold
				display inline-block
				color #fff//#005403
				font-size 1.1em
				padding 12px 16px
		.inside
			padding 16px
			.nav
				.nav-link
					color #005403
					background-color #00ad27a6//59ca726b clarito
					border 1px solid #005403
					margin-right 8px
			.big-count
				width 100%
				font-weight bold
				text-align center
				font-size 1.5em
			/*thead
				font-weight bold
			td
				p
					margin-bottom 0px
					margin-top 5px
					margin-right -10px*/
					
									
.opts
	a
		border-radius 4px
		border 1px solid #21856d//#00ad27a6//#fd7e1494
		display inline-block
		padding 8px 12px
		i
			color #21856d//green
			&:hover
				box-shadow 0 0.5rem 1rem rgba(0,0,0,0.15)
				color #000 !important			
.page-user
	.info
		background-color #fff
		span
			display block
			font-size 1.2em
			width 100%
		span.title
			font-weight bold
			margin-top 16px
	.btn
		width 100%

.dropdown
	.dropdown-menu
		padding-bottom 0px
		padding-top 0px
		a.dropdown-item
			font-size 14px
			&:hover
				color #fff
				background-color #21856d
